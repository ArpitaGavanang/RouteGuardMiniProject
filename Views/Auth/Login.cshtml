@model RouteGuardProject.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container w-50 mt-5">


<form asp-action="Login">
        <div class="border border-0 p-3 mt-4 mb-4 rounded-3 px-4 shadow-lg">
        <h2 class="text-center">Login</h2>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-2">
                <label asp-for="Name" class="control-label mb-1"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
                <label asp-for="Password" class="control-label mb-1"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group text-center my-3">
        <input type="submit" value="Login" class="btn bg-dark text-light" />
    </div>
