@{
    ViewData["Title"] = "SuperAdmin Login";
}


<div class="container w-50 mt-5">  
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="border border-0 p-3 mt-4 mb-4 rounded-3 px-4 shadow-lg">
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="text" class="form-control" id="Password" name="Password" required />
    </div>
    <div class="my-3 text-center">
                <button type="submit" class="btn bg-dark text-light">Login</button>
    </div>
            
    <p>
     <a asp-action="ChangePassword" asp-controller="SuperAdmins">Change Password</a>
    </p>
</form>
</div>
</div>
